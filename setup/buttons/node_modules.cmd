@echo off
setlocal

set "configFile=.\setup\config.txt"

set "installDir="
for /f "usebackq delims=" %%a in ("%configFile%") do (
    set "installDir=%%a"
)

echo Please use "Force Stop" before reinstalling BocchiBot Node Modules! Do you want to continue? (Y/N)
choice /c yn /n >nul

if errorlevel 2 (
    echo The script will exit.
    pause
    exit /b
)

if exist "%SystemRoot%\System32\WindowsPowerShell\v1.0\powershell.exe" (
    powershell -Command "Start-Process 'cmd' -Verb RunAs -ArgumentList '/c pm2 kill && echo Reinstalling Node Modules... && if exist "%installDir%\BocchiBot\package-lock.json" (del /f /s /q "%installDir%\BocchiBot\package-lock.json" > nul 2>&1) && if exist "%installDir%\BocchiBot\node_modules" (rmdir /s /q "%installDir%\BocchiBot\node_modules" > nul 2>&1) && cd %installDir%\BocchiBot && npm install && echo Reinstallation complete! && pause'"
) else (
    runas /user:Administrator "cmd /c pm2 kill && echo Reinstalling Node Modules... && if exist "%installDir%\BocchiBot\package-lock.json" (del /f /s /q "%installDir%\BocchiBot\package-lock.json" > nul 2>&1) && if exist "%installDir%\BocchiBot\node_modules" (rmdir /s /q "%installDir%\BocchiBot\node_modules" > nul 2>&1) && cd %installDir%\BocchiBot && npm install && echo Reinstallation complete! && pause"
)
